{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "logicAppName": {
      "type": "string",
      "defaultValue": "FabricAutoScaleLogicApp"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "subscriptionId": {
      "type": "string"
    },
    "resourceGroup": {
      "type": "string"
    },
    "fabricCapacityName": {
      "type": "string"
    },
    "notificationEmail": {
      "type": "string"
    },
    "keyVaultName": {
      "type": "string"
    },
    "coolDownMinutes": {
      "type": "int",
      "defaultValue": 30
    },
    "coolDownSecretName": {
      "type": "string",
      "defaultValue": "fabric-autoscale-last-scaled-utc"
    },
    "metricsEndpointUrl": {
      "type": "string",
      "defaultValue": "https://api.fabric.microsoft.com/v1/capacities/{capacityId}/metrics"
    },
    "scaleUpThreshold": {
      "type": "int",
      "defaultValue": 80
    },
    "scaleDownThreshold": {
      "type": "int",
      "defaultValue": 40
    },
    "scaleUpSku": {
      "type": "string",
      "defaultValue": "F128"
    },
    "scaleDownSku": {
      "type": "string",
      "defaultValue": "F64"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "office365",
      "location": "[parameters('location')]",
      "properties": {
        "displayName": "office365",
        "api": {
          "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'office365')]"
        }
      }
    },
    {
      "type": "Microsoft.Logic/workflows",
      "apiVersion": "2019-05-01",
      "name": "[parameters('logicAppName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "parameters": {
          "$connections": {
            "value": {
              "office365": {
                "connectionId": "[resourceId('Microsoft.Web/connections', 'office365')]",
                "connectionName": "office365",
                "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'office365')]"
              }
            }
          }
        },
        "definition": {
          "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "$connections": {
              "defaultValue": {},
              "type": "Object"
            }
          },
          "triggers": {
            "Every_5_Minutes": {
              "type": "Recurrence",
              "recurrence": {
                "frequency": "Minute",
                "interval": 5
              }
            }
          },
          "actions": {
            "Init_LastScaleUtc": {
              "type": "InitializeVariable",
              "inputs": {
                "variables": [
                  {
                    "name": "LastScaleUtc",
                    "type": "String",
                    "value": "1900-01-01T00:00:00Z"
                  }
                ]
              }
            },
            "Get_LastScale_Secret": {
              "type": "Http",
              "inputs": {
                "method": "GET",
                "uri": "https://@{parameters('keyVaultName')}.vault.azure.net/secrets/@{parameters('coolDownSecretName')}?api-version=7.4",
                "authentication": {
                  "type": "ManagedServiceIdentity"
                },
                "headers": {
                  "Accept": "application/json"
                }
              },
              "runAfter": {
                "Init_LastScaleUtc": [
                  "Succeeded"
                ]
              }
            },
            "If_Secret_Succeeded": {
              "type": "If",
              "expression": "@equals(actions('Get_LastScale_Secret').status, 'Succeeded')",
              "actions": {
                "Set_LastScale_From_Secret": {
                  "type": "SetVariable",
                  "inputs": {
                    "name": "LastScaleUtc",
                    "value": "@body('Get_LastScale_Secret')?['value']"
                  }
                }
              },
              "runAfter": {
                "Get_LastScale_Secret": [
                  "Succeeded",
                  "Failed"
                ]
              }
            },
            "Get_CU": {
              "type": "Http",
              "inputs": {
                "method": "GET",
                "uri": "@{parameters('metricsEndpointUrl')}",
                "headers": {
                  "Accept": "application/json"
                }
              },
              "runAfter": {
                "If_Secret_Succeeded": [
                  "Succeeded"
                ]
              }
            },
            "Parse_CU": {
              "type": "ParseJson",
              "inputs": {
                "content": "@body('Get_CU')",
                "schema": {
                  "type": "object",
                  "properties": {
                    "cuUsagePercentage": {
                      "type": "number"
                    }
                  },
                  "required": ["cuUsagePercentage"]
                }
              },
              "runAfter": {
                "Get_CU": [
                  "Succeeded"
                ]
              }
            },
            "Check_CoolDown": {
              "type": "If",
              "expression": "@greaterOrEquals(utcNow(), addMinutes(variables('LastScaleUtc'), parameters('coolDownMinutes')))",
              "actions": {
                "If_ScaleUp": {
                  "type": "If",
                  "expression": "@greater(body('Parse_CU')?['cuUsagePercentage'], parameters('scaleUpThreshold'))",
                  "actions": {
                    "Scale_Up": {
                      "type": "Http",
                      "inputs": {
                        "method": "PATCH",
                        "uri": "https://management.azure.com/subscriptions/@{parameters('subscriptionId')}/resourceGroups/@{parameters('resourceGroup')}/providers/Microsoft.Fabric/capacities/@{parameters('fabricCapacityName')}?api-version=2023-11-01",
                        "authentication": {
                          "type": "ManagedServiceIdentity"
                        },
                        "headers": {
                          "Content-Type": "application/json"
                        },
                        "body": {
                          "sku": {
                            "name": "@{parameters('scaleUpSku')}"
                          }
                        }
                      }
                    },
                    "Set_LastScale_After_Up": {
                      "type": "Http",
                      "inputs": {
                        "method": "PUT",
                        "uri": "https://@{parameters('keyVaultName')}.vault.azure.net/secrets/@{parameters('coolDownSecretName')}?api-version=7.4",
                        "authentication": {
                          "type": "ManagedServiceIdentity"
                        },
                        "headers": {
                          "Content-Type": "application/json"
                        },
                        "body": {
                          "value": "@utcNow()"
                        }
                      },
                      "runAfter": {
                        "Scale_Up": [
                          "Succeeded"
                        ]
                      }
                    },
                    "Notify_Email_Up": {
                      "type": "ApiConnection",
                      "inputs": {
                        "host": {
                          "connection": {
                            "name": "@parameters('$connections')['office365']['connectionId']"
                          }
                        },
                        "method": "POST",
                        "path": "/v2/Mail",
                        "body": {
                          "To": "@parameters('notificationEmail')",
                          "Subject": "Fabric Capacity Scaled UP",
                          "Body": "Capacity @{parameters('fabricCapacityName')} scaled UP to @{parameters('scaleUpSku')} because CU usage exceeded @{parameters('scaleUpThreshold')}%."
                        }
                      },
                      "runAfter": {
                        "Set_LastScale_After_Up": [
                          "Succeeded"
                        ]
                      }
                    }
                  },
                  "else": {
                    "actions": {
                      "If_ScaleDown": {
                        "type": "If",
                        "expression": "@less(body('Parse_CU')?['cuUsagePercentage'], parameters('scaleDownThreshold'))",
                        "actions": {
                          "Scale_Down": {
                            "type": "Http",
                            "inputs": {
                              "method": "PATCH",
                              "uri": "https://management.azure.com/subscriptions/@{parameters('subscriptionId')}/resourceGroups/@{parameters('resourceGroup')}/providers/Microsoft.Fabric/capacities/@{parameters('fabricCapacityName')}?api-version=2023-11-01",
                              "authentication": {
                                "type": "ManagedServiceIdentity"
                              },
                              "headers": {
                                "Content-Type": "application/json"
                              },
                              "body": {
                                "sku": {
                                  "name": "@{parameters('scaleDownSku')}"
                                }
                              }
                            }
                          },
                          "Set_LastScale_After_Down": {
                            "type": "Http",
                            "inputs": {
                              "method": "PUT",
                              "uri": "https://@{parameters('keyVaultName')}.vault.azure.net/secrets/@{parameters('coolDownSecretName')}?api-version=7.4",
                              "authentication": {
                                "type": "ManagedServiceIdentity"
                              },
                              "headers": {
                                "Content-Type": "application/json"
                              },
                              "body": {
                                "value": "@utcNow()"
                              }
                            },
                            "runAfter": {
                              "Scale_Down": [
                                "Succeeded"
                              ]
                            }
                          },
                          "Notify_Email_Down": {
                            "type": "ApiConnection",
                            "inputs": {
                              "host": {
                                "connection": {
                                  "name": "@parameters('$connections')['office365']['connectionId']"
                                }
                              },
                              "method": "POST",
                              "path": "/v2/Mail",
                              "body": {
                                "To": "@parameters('notificationEmail')",
                                "Subject": "Fabric Capacity Scaled DOWN",
                                "Body": "Capacity @{parameters('fabricCapacityName')} scaled DOWN to @{parameters('scaleDownSku')} because CU usage dropped below @{parameters('scaleDownThreshold')}%."
                              }
                            },
                            "runAfter": {
                              "Set_LastScale_After_Down": [
                                "Succeeded"
                              ]
                            }
                          }
                        }
                      }
                    }
                  }
                }
              },
              "else": {
                "actions": {
                  "Compose_Skip": {
                    "type": "Compose",
                    "inputs": "Cool-down active; skipping scale."
                  }
                }
              },
              "runAfter": {
                "Parse_CU": [
                  "Succeeded"
                ]
              }
            }
          }
        }
      }
    }
  ]
}
``
